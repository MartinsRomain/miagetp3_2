<div class="mdc-card">
    <div class="mdc-card__primary-title">
            {{ annonce.nom }}
    </div>
    Auteur : {{ annonce.auteur.username }}
    <div class="mdc-card__primary-content">
        <p>{{ annonce.description | raw}}</p>
        <p>Prix : {{ annonce.prix }}</p>
    </div>
    <div class="mdc-card__actions">
        <div onclick="location.href='{{ path('annonce_show', {'id': annonce.id}) }}'" class="mdc-card__action-buttons">
            <button class="mdc-button mdc-card__action mdc-card__action--button">
                <div class="mdc-button__ripple"></div>
                <span class="mdc-button__label">Visualiser</span>
            </button>
        </div>
    </div>
</div>

